package views;

import java.awt.BorderLayout;
import java.awt.FlowLayout;

import javax.swing.JButton;
import javax.swing.JDialog;
import javax.swing.JPanel;
import javax.swing.border.EmptyBorder;
import javax.swing.JTextField;
import javax.swing.JLabel;
import java.awt.Font;

public class DocumentPerson extends JDialog {

	private final JPanel contentPanel = new JPanel();
	private JTextField textField;

	/**
	 * Launch the application.
	 */
	public static void main(String[] args) {
		try {
			DocumentPerson dialog = new DocumentPerson();
			dialog.setDefaultCloseOperation(JDialog.DISPOSE_ON_CLOSE);
			dialog.setVisible(true);
		} catch (Exception e) {
			e.printStackTrace();
		}
	}

	/**
	 * Create the dialog.
	 */
	public DocumentPerson() {
		setBounds(100, 100, 450, 192);
		getContentPane().setLayout(new BorderLayout());
		contentPanel.setBorder(new EmptyBorder(5, 5, 5, 5));
		getContentPane().add(contentPanel, BorderLayout.CENTER);
		contentPanel.setLayout(null);
		
		textField = new JTextField();
		textField.setFont(new Font("Segoe UI Semibold", Font.PLAIN, 19));
		textField.setBounds(94, 58, 244, 41);
		contentPanel.add(textField);
		textField.setColumns(10);
		
		JLabel lbDocument = new JLabel("Documento:");
		lbDocument.setFont(new Font("Segoe UI Semibold", Font.PLAIN, 19));
		lbDocument.setBounds(94, 22, 128, 25);
		contentPanel.add(lbDocument);
		
		JButton btnNewButton = new JButton("CONSULTAR");
		btnNewButton.setFont(new Font("Segoe UI Semibold", Font.PLAIN, 14));
		btnNewButton.setBounds(161, 110, 122, 29);
		contentPanel.add(btnNewButton);
	}
}
